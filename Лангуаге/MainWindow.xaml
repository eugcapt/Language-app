<Window x:Class="Лангуаге.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Лангуаге"
        mc:Ignorable="d"
        Title="Лангуаге" Height="450" Width="800" MinHeight="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="6*"/>
        </Grid.RowDefinitions>
        <Rectangle Fill="#FFE7FABF"/>
        <Image HorizontalAlignment="Left" Source="/school_logo.png"/>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Comic Sans MS" FontSize="36" Text="Школа иностранного языка" />
        <Frame ContentRendered="MainFrame_ContentRendered" NavigationUIVisibility="Hidden" x:Name="MainFrame" Grid.Row="1"/>
        <Button Name="BackButton" HorizontalAlignment="Right" Height="40" Click="BackButton_Click" Content="Назад" Background="#FF04A0FF"/>
    </Grid>
</Window>
